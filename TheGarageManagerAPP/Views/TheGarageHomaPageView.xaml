<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheGarageManagerAPP.Views.TheGarageHomaPageView"
             Title="TheGarageHomaPageView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to the GARAGE "
            VerticalOptions="Center"           
            HorizontalOptions="Center"
            FontSize="Large"/>

        <Button Text="Parts" Command="{Binding PartsCommand}" IsEnabled="{Binding NotInServerCall}"  Style="{StaticResource buttonStyle}" BackgroundColor="Blue" Margin="5" />
        <Button Text="AllVehicles" Command="{Binding AllVehiclesCommand}" IsEnabled="{Binding NotInServerCall}"  Style="{StaticResource buttonStyle}" BackgroundColor="Blue" Margin="5" />
        <Button Text="Profile" Command="{Binding ProfileCommand}" IsEnabled="{Binding NotInServerCall}"  Style="{StaticResource buttonStyle}" BackgroundColor="Blue" Margin="5" />
        <Button Text="Appointment" Command="{Binding AppointmentCommand}" IsEnabled="{Binding NotInServerCall}"  Style="{StaticResource buttonStyle}" BackgroundColor="Blue" Margin="5" />
        <Button Text="CarRepair" Command="{Binding CarRepairCommand}" IsEnabled="{Binding NotInServerCall}"  Style="{StaticResource buttonStyle}" BackgroundColor="Blue" Margin="5" />


    </VerticalStackLayout>
</ContentPage>