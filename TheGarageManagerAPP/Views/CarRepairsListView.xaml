<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheGarageManagerAPP.Views.CarRepairsListView"
             Title="CarRepairsListView">
    <VerticalStackLayout>
        <Button Text="Add New Repair" Command="{Binding NewrepairCommand}"></Button>
    <CollectionView
    ItemsSource="{Binding CarRepairs}"
    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5" Padding="10" BorderColor="Gray">
                    <StackLayout>
                        <Label Text="{Binding DescriptionCar}" FontAttributes="Bold" />
                        <Label Text="{Binding RepairDate, StringFormat='Date: {0:yyyy-MM-dd}'}" />
                            <Label Text="{Binding Cost, StringFormat='Cost: â‚ª{0}'}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
    </CollectionView>
    </VerticalStackLayout>
</ContentPage>