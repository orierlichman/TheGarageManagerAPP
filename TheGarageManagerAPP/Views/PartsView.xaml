<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheGarageManagerAPP.Views.PartsView"
             Title="PartsView"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Content>
        <ScrollView Padding="10">
            <CollectionView ItemsSource="{Binding GarageParts}" 
                            >
                <CollectionView.ItemTemplate>

                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, Auto, Auto" Padding="5">
                            <!-- תמונה 1 -->
                            <Image Source="{Binding ImageURL}" Aspect="AspectFill" HeightRequest="120" Grid.Row="0" Grid.Column="0" />

                            <!-- תמונה 2 -->
                            <Image Source="{Binding ImageURL}" Aspect="AspectFill" HeightRequest="120" Grid.Row="0" Grid.Column="1" />

                            <!-- שם החלק -->
                            <Label Text="{Binding PartName}" 
                                   FontSize="Medium" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center" 
                                   Grid.Row="1" Grid.ColumnSpan="2" />

                            <!-- מחיר -->
                            <Label Text="{Binding Cost, StringFormat='${0}'}" 
                                   FontSize="Small" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center" 
                                   Grid.Row="2" Grid.ColumnSpan="2" />

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>