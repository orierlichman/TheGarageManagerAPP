<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheGarageManagerAPP.Views.PartsView"
             BackgroundColor="#1a1a1a"
             Title="×—×œ×§×™ ×—×™×œ×•×£">

    <!-- App resources -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Garage-inspired modern color palette -->
            <Color x:Key="GaragePrimary">#ff6b35</Color>
            <Color x:Key="GarageDark">#1a1a1a</Color>
            <Color x:Key="GarageSecondary">#2c2c2c</Color>
            <Color x:Key="GarageLight">#34495e</Color>
            <Color x:Key="GarageText">#ecf0f1</Color>
            <Color x:Key="GarageError">#e74c3c</Color>
            <Color x:Key="GaragePlaceholder">#7f8c8d</Color>

            <!-- Part card style -->
            <Style x:Key="partCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource GarageLight}" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Margin" Value="8" />
                <Setter Property="BorderColor" Value="{StaticResource GaragePrimary}" />
            </Style>

            <!-- Search bar container style -->
            <Style x:Key="searchBarContainer" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource GarageSecondary}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="BorderColor" Value="{StaticResource GaragePrimary}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Background with gradient -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a1a" Offset="0.0" />
                    <GradientStop Color="#2c2c2c" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,20">
                <!-- Parts Icon -->
                <Frame BackgroundColor="#ff6b35" 
                       CornerRadius="30" 
                       WidthRequest="60" 
                       HeightRequest="60"
                       HorizontalOptions="Center"
                       HasShadow="True"
                       Padding="12">
                    <Label Text="âš™ï¸" 
                           FontSize="28" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                </Frame>

                <!-- Title -->
                <Label Text="×—×œ×§×™ ×—×™×œ×•×£"
                       HorizontalOptions="Center"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#ff6b35"/>

                <!-- Subtitle -->
                <Label Text="×ž×—×¡×Ÿ ×—×œ×§×™ ×”×—×™×œ×•×£ ×©×œ ×”×ž×•×¡×š"
                       HorizontalOptions="Center"
                       FontSize="14"
                       TextColor="#b0b0b0"
                       FontAttributes="Italic"/>
            </StackLayout>

            <!-- Separator Line -->
            <BoxView Grid.Row="1"
                     BackgroundColor="#ff6b35" 
                     HeightRequest="2" 
                     WidthRequest="100" 
                     HorizontalOptions="Center"
                     Margin="0,0,0,20"/>

            <!-- Search Section -->
            <Frame Grid.Row="2" 
                   Style="{StaticResource searchBarContainer}"
                   Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Icon -->
                    <Label Grid.Column="0"
                           Text="ðŸ”" 
                           FontSize="18"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           TextColor="#ff6b35"/>

                    <!-- Search Bar -->
                    <SearchBar Grid.Column="1"
                              Placeholder="×—×¤×© ×—×œ×§..." 
                              Text="{Binding SearchText}" 
                              BackgroundColor="Transparent"
                              TextColor="#ecf0f1"
                              PlaceholderColor="#7f8c8d"
                              CancelButtonColor="#ff6b35"
                              FontSize="16"/>
                </Grid>
            </Frame>

            <!-- Parts Collection -->
            <CollectionView Grid.Row="3" 
                          ItemsSource="{Binding GarageParts}"
                          BackgroundColor="Transparent">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" 
                                   Span="2" 
                                   HorizontalItemSpacing="10" 
                                   VerticalItemSpacing="15"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource partCardStyle}">
                            <StackLayout Spacing="10">

                                <!-- Part Image Container -->
                                <Frame BackgroundColor="#2c2c2c" 
                                       CornerRadius="10" 
                                       Padding="5"
                                       HasShadow="False"
                                       HeightRequest="100">
                                    <Image Source="{Binding ImageURL}" 
                                           Aspect="AspectFit" 
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           BackgroundColor="White"/>
                                </Frame>

                                <!-- Part Info -->
                                <StackLayout Spacing="5">
                                    <!-- Part Name -->
                                    <Label Text="{Binding PartName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#ecf0f1"
                                           HorizontalOptions="Center"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2"/>

                                    <!-- Price Container -->
                                    <Frame BackgroundColor="#ff6b35" 
                                           CornerRadius="8"
                                           Padding="8,4"
                                           HasShadow="False"
                                           HorizontalOptions="Center">
                                        <Label Text="{Binding Cost, StringFormat='${0}'}" 
                                               FontSize="14" 
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"/>
                                    </Frame>
                                </StackLayout>

                                <!-- Part Details -->
                                <Grid ColumnDefinitions="*,*" 
                                      RowDefinitions="Auto,Auto"
                                      ColumnSpacing="5"
                                      RowSpacing="3">

                                    <!-- Stock Status -->
                                    <StackLayout Grid.Column="0" Grid.Row="0" 
                                               Orientation="Horizontal" 
                                               HorizontalOptions="Start">
                                        <Label Text="ðŸ“¦" FontSize="12"/>
                                        <Label Text="×‘×ž×—×¡×Ÿ" 
                                               FontSize="10" 
                                               TextColor="#7f8c8d"/>
                                    </StackLayout>

                                    <!-- Quality -->
                                    <StackLayout Grid.Column="1" Grid.Row="0" 
                                               Orientation="Horizontal" 
                                               HorizontalOptions="End">
                                        <Label Text="â­" FontSize="12"/>
                                        <Label Text="××™×›×•×ª" 
                                               FontSize="10" 
                                               TextColor="#7f8c8d"/>
                                    </StackLayout>
                                </Grid>

                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Empty View -->
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center" 
                               VerticalOptions="Center"
                               Spacing="15">
                        <Label Text="ðŸ”" 
                               FontSize="60" 
                               HorizontalOptions="Center"
                               TextColor="#7f8c8d"/>
                        <Label Text="×œ× × ×ž×¦××• ×—×œ×§×™×"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#7f8c8d"
                               HorizontalOptions="Center"/>
                        <Label Text="× ×¡×” ×œ×©× ×•×ª ××ª ×ž×™×œ×•×ª ×”×—×™×¤×•×©"
                               FontSize="14"
                               TextColor="#7f8c8d"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>

            </CollectionView>
        </Grid>

        <!-- Quick Stats Overlay -->
        <Frame BackgroundColor="#34495e" 
               CornerRadius="12" 
               Padding="15,8"
               HasShadow="True"
               HorizontalOptions="End"
               VerticalOptions="End"
               Margin="20,20,20,40">
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="ðŸ“Š" FontSize="16"/>
                <Label Text="×¡×”×´×› ×—×œ×§×™×: " 
                       FontSize="12" 
                       TextColor="#ecf0f1"/>
                <Label Text="{Binding GarageParts.Count}" 
                       FontSize="12" 
                       FontAttributes="Bold"
                       TextColor="#ff6b35"/>
            </StackLayout>
        </Frame>

    </Grid>
</ContentPage>








