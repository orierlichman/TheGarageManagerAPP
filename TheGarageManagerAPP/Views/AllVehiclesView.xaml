<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheGarageManagerAPP.Views.AllVehiclesView"
             BackgroundColor="#1a1a1a"
             Title="×›×œ×™ ×¨×›×‘">

    <!-- App resources -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Garage-inspired modern color palette -->
            <Color x:Key="GaragePrimary">#ff6b35</Color>
            <Color x:Key="GarageDark">#1a1a1a</Color>
            <Color x:Key="GarageSecondary">#2c2c2c</Color>
            <Color x:Key="GarageLight">#34495e</Color>
            <Color x:Key="GarageText">#ecf0f1</Color>
            <Color x:Key="GarageSubtext">#7f8c8d</Color>

            <!-- Vehicle card style -->
            <Style x:Key="vehicleCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource GarageLight}" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Margin" Value="10,8" />
                <Setter Property="BorderColor" Value="{StaticResource GaragePrimary}" />
            </Style>

            <!-- Search bar container style -->
            <Style x:Key="searchBarContainer" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource GarageSecondary}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="BorderColor" Value="{StaticResource GaragePrimary}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
       
        <Grid>
            <!-- Background with gradient -->
            <BoxView>
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1a1a1a" Offset="0.0" />
                        <GradientStop Color="#2c2c2c" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
        <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding InServerCall}">
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,20">
                    <!-- Vehicle Icon -->
                    <Frame BackgroundColor="#ff6b35" 
                       CornerRadius="30" 
                       WidthRequest="60" 
                       HeightRequest="60"
                       HorizontalOptions="Center"
                       HasShadow="True"
                       Padding="12">
                        <Label Text="ðŸš—" 
                           FontSize="28" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                    </Frame>

                    <!-- Title -->
                    <Label Text="×¨×›×‘×™ ×”×ž×•×¡×š"
                       HorizontalOptions="Center"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#ff6b35"/>

                    <!-- Subtitle -->
                    <Label Text="× ×™×”×•×œ ×•×¦×¤×™×™×” ×‘×›×œ×™ ×”×¨×›×‘ ×‘×ž×•×¡×š"
                       HorizontalOptions="Center"
                       FontSize="14"
                       TextColor="#b0b0b0"
                       FontAttributes="Italic"/>
                </StackLayout>

                <!-- Separator Line -->
                <BoxView Grid.Row="1"
                     BackgroundColor="#ff6b35" 
                     HeightRequest="2" 
                     WidthRequest="100" 
                     HorizontalOptions="Center"
                     Margin="0,0,0,20"/>

                <!-- Search Section -->
                <Frame Grid.Row="2" 
                   Style="{StaticResource searchBarContainer}"
                   Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <Label Grid.Column="0"
                           Text="ðŸ”" 
                           FontSize="18"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           TextColor="#ff6b35"/>

                        <!-- Search Bar -->
                        <SearchBar Grid.Column="1"
                              Placeholder="×—×¤×© ×œ×¤×™ ×ž×¡×¤×¨ ×¨×™×©×•×™..." 
                              Text="{Binding SearchText}" 
                              BackgroundColor="Transparent"
                              TextColor="#ecf0f1"
                              PlaceholderColor="#7f8c8d"
                              CancelButtonColor="#ff6b35"
                              FontSize="16"/>
                    </Grid>
                </Frame>

                <!-- Vehicles Collection -->
                <CollectionView Grid.Row="3" 
                          ItemsSource="{Binding GarageVehicle}"
                          SelectionMode="Single" 
                          SelectedItem="{Binding SelectedVehicle}"
                          BackgroundColor="Transparent">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource vehicleCardStyle}">
                                <Grid RowSpacing="10" ColumnSpacing="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Vehicle Image Container -->
                                    <Frame Grid.Row="0" Grid.Column="0" 
                                       BackgroundColor="#2c2c2c" 
                                       CornerRadius="12" 
                                       Padding="8"
                                       HasShadow="False"
                                       HeightRequest="100"
                                       WidthRequest="110">
                                        <Image Source="{Binding ImageDefaultURL}" 
                                           Aspect="AspectFit" 
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           BackgroundColor="White"/>
                                    </Frame>

                                    <!-- Vehicle Details -->
                                    <StackLayout Grid.Row="0" Grid.Column="1" 
                                           Spacing="8"
                                           VerticalOptions="Center">

                                        <!-- Model & Manufacturer -->
                                        <StackLayout Spacing="2">
                                            <Label Text="{Binding Model}" 
                                               FontSize="18" 
                                               FontAttributes="Bold"
                                               TextColor="#ecf0f1"/>
                                            <Label Text="{Binding Manufacturer}" 
                                               FontSize="14" 
                                               TextColor="#ff6b35"
                                               FontAttributes="Italic"/>
                                        </StackLayout>

                                        <!-- License Plate -->
                                        <Frame BackgroundColor="#ff6b35" 
                                           CornerRadius="6"
                                           Padding="8,4"
                                           HasShadow="False"
                                           HorizontalOptions="Start">
                                            <Label Text="{Binding LicensePlate}" 
                                               FontSize="14" 
                                               FontAttributes="Bold"
                                               TextColor="White"/>
                                        </Frame>

                                        <!-- Year --><!--
                                        <StackLayout Orientation="Horizontal" Spacing="5">
                                            <Label Text="ðŸ“…" FontSize="14"/>
                                            <Label Text="{Binding YearVehicle}" 
                                               FontSize="14" 
                                               TextColor="#7f8c8d"/>
                                        </StackLayout>-->

                                    </StackLayout>

                                    <!-- Additional Details Row -->
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2" 
                                      ColumnDefinitions="*,*,*" 
                                      RowDefinitions="Auto"
                                      ColumnSpacing="10">

                                        <!-- Fuel Type -->
                                        <Frame Grid.Column="0" 
                                           BackgroundColor="#2c2c2c"
                                           CornerRadius="8"
                                           Padding="8,6"
                                           HasShadow="False">
                                            <StackLayout Orientation="Horizontal" 
                                                   Spacing="5"
                                                   HorizontalOptions="Center">
                                                <Label Text="â›½" FontSize="12"/>
                                                <Label Text="{Binding FuelType}" 
                                                   FontSize="12" 
                                                   TextColor="#ecf0f1"
                                                   FontAttributes="Bold"/>
                                            </StackLayout>
                                        </Frame>

                                        <!-- Mileage -->
                                        <Frame Grid.Column="1" 
                                           BackgroundColor="#2c2c2c"
                                           CornerRadius="8"
                                           Padding="8,6"
                                           HasShadow="False">
                                            <StackLayout Orientation="Horizontal" 
                                                   Spacing="5"
                                                   HorizontalOptions="Center">
                                                <Label Text="ðŸ›£ï¸" FontSize="12"/>
                                                <Label Text="{Binding CurrentMileage, StringFormat='{0:N0} ×§×´×ž'}" 
                                                   FontSize="12" 
                                                   TextColor="#ecf0f1"
                                                   FontAttributes="Bold"/>
                                            </StackLayout>
                                        </Frame>

                                        <!-- Status Indicator -->
                                        <Frame Grid.Column="2" 
                                           BackgroundColor="#27ae60"
                                           CornerRadius="8"
                                           Padding="8,6"
                                           HasShadow="False">
                                            <StackLayout Orientation="Horizontal" 
                                                   Spacing="5"
                                                   HorizontalOptions="Center">
                                                <Label Text="ðŸ”§" FontSize="12"/>
                                                <Label Text="×–×ž×™×Ÿ" 
                                                   FontSize="12" 
                                                   TextColor="White"
                                                   FontAttributes="Bold"/>
                                            </StackLayout>
                                        </Frame>

                                    </Grid>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <!-- Empty View -->
                    <CollectionView.EmptyView>
                        <StackLayout HorizontalOptions="Center" 
                               VerticalOptions="Center"
                               Spacing="15">
                            <Label Text="ðŸš—" 
                               FontSize="60" 
                               HorizontalOptions="Center"
                               TextColor="#7f8c8d"/>
                            <Label Text="×œ× × ×ž×¦××• ×¨×›×‘×™×"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#7f8c8d"
                               HorizontalOptions="Center"/>
                            <Label Text="× ×¡×” ×œ×©× ×•×ª ××ª ×ž×™×œ×•×ª ×”×—×™×¤×•×©"
                               FontSize="14"
                               TextColor="#7f8c8d"
                               HorizontalOptions="Center"/>
                        </StackLayout>
                    </CollectionView.EmptyView>

                </CollectionView>
            </Grid>
        </RefreshView>
        <!-- Quick Stats Overlay -->
            <Frame BackgroundColor="#34495e" 
               CornerRadius="12" 
               Padding="15,8"
               HasShadow="True"
               HorizontalOptions="End"
               VerticalOptions="End"
               Margin="20,20,20,40">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="ðŸš—" FontSize="16"/>
                    <Label Text="×¡×”×´×› ×¨×›×‘×™×: " 
                       FontSize="12" 
                       TextColor="#ecf0f1"/>
                    <Label Text="{Binding GarageVehicle.Count}" 
                       FontSize="12" 
                       FontAttributes="Bold"
                       TextColor="#ff6b35"/>
                </StackLayout>
            </Frame>

        </Grid>
       
    
</ContentPage>



